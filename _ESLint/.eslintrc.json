{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": 0,
        "no-unused-vars": "warn",
        "no-var": "warn",
        "no-console": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": "off",
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    }
}
